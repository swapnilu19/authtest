<!DOCTYPE html>
<html>
<body>
<!-- views/home.handlebars -->
{{#if username}}
  <div class="jumbotron">
    <h1>User Authentication</h1>
    <p>Below is your profile information!</p>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Profile Information</h3>
    </div>
    <div class="panel-body">
      <p>Username: {{username}}</p>
      <p>Avatar: <img src= "{{avatar}}"/></p>
			<div style="padding-left:45px">
				<button id= "dash" class="btn btn-primary btn-md" >Dashboard </button>
    	</div>
		</div>
  </div>

{{else}}
  <div class="jumbotron">
    <h1>User Authentication</h1>
    <p>Sign in and view your profile!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>
  </div>

{{/if}}
	<script src ="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

	<script>
		$(document).ready(function(){
			$("#dash").click(function(){
				window.location.href="http://127.0.0.1:8091/dashboard";
			});
		});
	</script>
</body>
</html>
